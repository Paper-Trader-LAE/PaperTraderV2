<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#0D0D0D"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- SYMBOL + PRICE -->
    <TextView
        android:id="@+id/tradeSymbol"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Buy AAPL"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tradePrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="$0.0000"
        android:textColor="#00C896"
        android:textSize="18sp"
        android:layout_marginTop="6dp" />

    <!-- QUANTITY INPUT -->
    <TextView
        android:layout_marginTop="30dp"
        android:text="Quantity"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/tradeQuantity"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="12dp"
        android:background="#1B1B1B"
        android:textColor="#FFFFFF"
        android:textColorHint="#777777"
        android:hint="Enter amount"
        android:inputType="numberDecimal" />

    <!-- ESTIMATED COST -->
    <TextView
        android:id="@+id/tradeEstimated"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Estimated Cost: $0.00"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:layout_marginTop="20dp" />

    <!-- CONFIRM BUTTON -->
    <Button
        android:id="@+id/tradeConfirmBtn"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="30dp"
        android:text="Confirm Trade"
        android:textStyle="bold"
        android:backgroundTint="#00C896"
        android:textColor="#0D0D0D" />

</LinearLayout>