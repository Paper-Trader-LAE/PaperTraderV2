<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0D1B2A"
    android:padding="20dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tradeHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trade"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold"
            android:paddingBottom="20dp" />

        <!-- CATEGORY LABEL -->
        <TextView
            android:id="@+id/categoryLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <!-- CATEGORY SPINNER -->
        <Spinner
            android:id="@+id/spinnerCategory"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#2c5784"
            android:padding="8dp"
            android:spinnerMode="dropdown" />

        <!-- SYMBOL LABEL -->
        <TextView
            android:id="@+id/symbolLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Symbol"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:layout_marginTop="20dp" />

        <!-- SYMBOL SPINNER -->
        <Spinner
            android:id="@+id/spinnerSymbol"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#2c5784"
            android:padding="8dp"
            android:spinnerMode="dropdown" />

        <!-- LIVE PRICE LABEL -->
        <TextView
            android:id="@+id/textLivePriceLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Live Price"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:layout_marginTop="20dp" />

        <!-- LIVE PRICE -->
        <TextView
            android:id="@+id/textLivePrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$0.00"
            android:textColor="#00C896"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingTop="6dp" />

        <!-- QUANTITY LABEL -->
        <TextView
            android:id="@+id/quantityLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quantity"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:layout_marginTop="20dp" />

        <EditText
            android:id="@+id/inputQuantity"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Enter amount"
            android:textColor="#FFFFFF"
            android:textColorHint="#777777"
            android:background="@android:color/transparent"
            android:padding="12dp"
            android:inputType="numberDecimal" />

        <!-- ESTIMATED COST -->
        <TextView
            android:id="@+id/textEstimated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estimated: $0.00"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginTop="12dp" />

        <!-- BUY BUTTON -->
        <Button
            android:id="@+id/btnBuy"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="BUY"
            android:textStyle="bold"
            android:textColor="#0D0D0D"
            android:backgroundTint="#00C896"
            android:layout_marginTop="25dp" />

        <!-- SELL BUTTON -->
        <Button
            android:id="@+id/btnSell"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="SELL"
            android:textStyle="bold"
            android:textColor="#0D0D0D"
            android:backgroundTint="#FF5252"
            android:layout_marginTop="12dp" />

    </LinearLayout>
</ScrollView>